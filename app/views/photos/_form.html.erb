  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :photo_title %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :photo_user_id %>
  </div>

  <% if @photo.image_data? %>
    Remove attachment: <%= f.check_box :remove_image %>
  <% end %>

    <%#= f.label :image %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
